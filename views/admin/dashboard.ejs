<%- include('../header.ejs') %>

    <div class="belowmynavbar">

       
        <% if(message.length> 0){ %>
            <div class="alert alert-success">
                <%= message %>
            </div>

            <% } %>

                <!-- table -->


               <div class="container">

                    <div  class="table-responsive" >
                        <table class="table table-bordered border-secondary">
                            <thead>
                                <tr style="background-color: #35b9dd; color: #fff;">
                                    <th>S.No</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Mobile Number</th>
                                    <th>Status</th>
                                    <th>Comment</th>
                                    <th></th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% i=1 %>
                                    <!-- to jo data d mai uth kar aarha tha usse item mai daala aur loop chalana padega kyunki 
                jitni baar data insert hoga utni baar hee data ko display karinge to syntax yea hai uska  -->
                                    <% c.forEach((item)=>{ %>
                                        <tr>
                                            <!-- isme jo name,email,mobile_number hai wo modals ke under Course.js hai uski fields hai inke data iss syntax se display ho jaayega  -->
                                            <td>
                                                <%= i++ %>
                                            </td>
                                            <td>
                                                <%= item.name %>
                                            </td>
                                            <td>
                                                <%= item.email %>
                                            </td>
                                            <td>
                                                <%= item.mobile_number %>
                                            </td>
                                            <td>
                                                <%= item.status %>
                                            </td>
                                            <td>
                                                <!-- abb yahan status ko approved karna hai aur kiska status approved karna saath mai uski id bhi to bhejna padega  -->
                                                <form action="/update_approve/<%= item._id %>" method="post">

                                                    <textarea name="comment" id="" cols="20" rows="2"></textarea>

                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-info" name="status" value="approved"
                                                    type="submit">Approved</button><br><br>
                                                <button class="btn btn-info" name="status" value="rejected"
                                                    type="submit">Rejected</button>
                                                </form>
                                            </td>

                                            <td>
                                                <!-- view walle btn par href mai yea (/course_view/<%= item._id %>) isliye diya taaki hum view par click karren to hume id mil jaaye student ki (click karinge to pahelle route par jaata hai fir controller par aur fir method par ) -->
                                                <a class="btn btn-info" href="/admin_view/<%= item._id %>">View</a>
                                                <a class="btn btn-primary" href="/admin_edit/<%= item._id %>">Edit</a>
                                                <a class="btn btn-danger"
                                                    href="/admin_delete/<%= item._id %>">Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>

                            </tbody>
                        </table>
                    </div>
                 </div> 

    </div>


    <%- include('../footer.ejs') %>